		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@types/commonmark": "^0.27.10",
		"@types/eslint": "^9.6.1",
		"clsx": "^2.1.1",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"mdsvex": "^0.11.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
